{
	"name" : "hanoivip/payment",
	"type" : "library",
    "repositories" : [{
			"type" : "path",
			"url" : "../payment-contract",
			"options" : {
				"symlink" : true
			}
		}, {
			"type" : "path",
			"url" : "../payment-method-contract",
			"options" : {
				"symlink" : true
			}
		}, {
			"type" : "path",
			"url" : "../events",
			"options" : {
				"symlink" : true
			}
		}
	],	
	"require" : {
		"php" : ">=7.0.0",
		"fideloper/proxy" : "~4.0",
		"guzzlehttp/guzzle" : "^6.3",
		"laravel/framework" : ">=5.5",
		"laravel/tinker" : "~1.0",
		"hanoivip/payment-contract" : "dev-master",
		"hanoivip/payment-method-contract" : "dev-master",
		"mervick/curl-helper" : "^2.2"
	},
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0",
        "symfony/thanks": "^1.0"
    },
	"autoload" : {
		"psr-4" : {
			"Hanoivip\\Payment\\" : "src/"
		}
	},
	"autoload-dev": {
        	"psr-4": {
            		"Hanoivip\\Payment\\Tests\\": "tests/"
        	}
    	},
	"extra" : {
		"laravel" : {
			"providers" : [
				"Hanoivip\\Payment\\TopupServiceProvider",
				"Hanoivip\\Payment\\EventServiceProvider"
			]
		}
	}
}
